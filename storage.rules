rules_version = '2';

// Craft rules based on data in your Firestore database
// write rule: allow write: if firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['admin', 'vip', 'guest'];
service firebase.storage {
  match /b/{bucket}/o {
    // Profile photos - users can upload to their own folder
    match /profile-photos/{userId}/{allPaths=**} {
      // Allow authenticated users to upload to their own profile photos folder
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow admins to read all profile photos
      allow read: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Signal attachments - only admins can upload
    match /signal-attachments/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Trade charts - users can upload to their own folder
    match /trade-charts/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow admins to read all trade charts
      allow read: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // General uploads - authenticated users can upload
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny rule
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
